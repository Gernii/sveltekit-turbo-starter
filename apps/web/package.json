{
	"name": "web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "paraglide-js compile --project ./project.inlang && vite build",
		"test": "npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:integration": "playwright test",
		"test:unit": "vitest run",
		"fmt": "run-s \"fmt.*\"",
		"fmt.write": "prettier --write \"src/**/*.{ts*,svelte}\"",
		"fmt.check": "prettier --check \"src/**/*.{ts*,svelte}\"",
		"lint": "run-s \"lint.*\"",
		"lint.fix": "eslint \"src/**/*.{ts*,svelte}\" --fix",
		"lint.check": "eslint  \"src/**/*.{ts*,svelte}\"  --max-warnings=0",
		"preview": "wrangler pages dev .svelte-kit/cloudflare",
		"postinstall": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/libs/i18n/messages"
	},
	"devDependencies": {
		"@fontsource/mulish": "^5.0.16",
		"@iconify-json/flag": "^1.1.48",
		"@iconify-json/logos": "^1.1.42",
		"@iconify-json/lucide": "^1.1.167",
		"@inlang/paraglide-js": "1.2.5",
		"@inlang/paraglide-js-adapter-sveltekit": "^0.5.11",
		"@playwright/test": "^1.28.1",
		"@repo/eslint-config": "*",
		"@repo/types-bridge": "*",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-cloudflare": "^4.1.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.10",
		"@types/eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.18",
		"cva": "npm:class-variance-authority@^0.7.0",
		"daisyui": "^4.7.3",
		"dayjs": "^1.11.10",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"http-status-codes": "^2.3.0",
		"iso-639-1": "^3.1.2",
		"postcss": "^8.4.35",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.12",
		"schema-dts": "^1.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwind-merge": "^2.2.1",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"unplugin-fonts": "^1.1.1",
		"unplugin-icons": "^0.18.5",
		"vite": "^5.0.3",
		"vite-imagetools": "^6.2.9",
		"vitest": "^1.2.0",
		"zod": "^3.22.4",
		"zod-form-data": "^2.0.2"
	},
	"type": "module",
	"lint-staged": {
		"src/**/*.{ts,svelte}": [
			"eslint --fix",
			"eslint --max-warnings=0",
			"prettier --write",
			"prettier --check"
		]
	}
}
